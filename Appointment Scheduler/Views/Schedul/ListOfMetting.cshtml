@using Appointment_Scheduler.Models;
@model Tuple<Metting,IEnumerable<Metting>>
@{
    ViewBag.Title = "ListOfMetting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}











<head>

    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

</head>




<h2 id="HMeeting">
    ListOfMetting










</h2>






<div id="accordion">

    <div class="card">
        <div class="card-header">
            <a class="collapsed card-link" data-toggle="collapse" href="#collapseThree">
                Add New Meeting
            </a>
        </div>
        <div id="collapseThree" class="collapse" data-parent="#accordion">
            <div class="card-body">

                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#home">Today</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#menu1">Tomorrow</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#menu2">Other</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane container active" id="home">

                            @using (Html.BeginForm("CreateToday", "Schedul", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.LabelFor(tuple => tuple.Item1.Name)
                                    @Html.TextBoxFor(tuple => tuple.Item1.Name, new { @Name = "Name" })
                                    

                                </div>
                                <div class="form-group">
                                    <input id="appt-time" type="time" name="Timestart" value="13:30" />
                                    To:
                                    <input id="appt-time2" type="time" name="TimeEnd" value="13:30" />
                                
                                </div>

                                






                                <button type="submit" class="btn btn-primary">Submit</button>
                            }







                        </div>








                        <div class="tab-pane container fade" id="menu1">

                            @using (Html.BeginForm("CreateTommorow", "Schedul", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.LabelFor(tuple => tuple.Item1.Name)
                                    @Html.TextBoxFor(tuple => tuple.Item1.Name, new { @Name = "Name" })



                                </div>
                                <div class="form-group">
                                    <input id="appt-time" type="time" name="Timestart" value="13:30" />
                                    To:
                                    <input id="appt-time2" type="time" name="TimeEnd" value="13:30" />

                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            }









                        </div>








                        <div class="tab-pane container fade" id="menu2">


                            @using (Html.BeginForm("CreateOther", "Schedul", FormMethod.Post))
                            {
                            <div class="form-group">
                                @Html.LabelFor(tuple => tuple.Item1.Name)
                                @Html.TextBoxFor(tuple => tuple.Item1.Name, new { @Name = "Name" })


                                <label for="start">Date:</label>

                                <input type="date" id="start" name="Other_Data"
                                       value="2022-09-19"
                                       min="2020-01-01" max="2024-12-31">




                            </div>
                                <div class="form-group">
                                    <input id="appt-time" type="time" name="Timestart" value="13:30" />
                                    To:
                                    <input id="appt-time2" type="time" name="TimeEnd" value="13:30" />

                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            }




                        </div>
                    </div>




















                <form id="newMeeting">
                </form>
            </div>
                </div>
    </div>

</div>




















<body>


    <table id="Meetings" class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th>Name:</th>
                <th>Data:</th>
                <th>Term:</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Item2)
            {
            <tr>
                <td>@item.Name</td>
               
                    <td>@item.DateTime_Start.ToShortDateString()</td>
                <td>@item.Start_Hours - @item.End_Hours </td>

            </tr>
            }


        </tbody>
    </table>



</body>







